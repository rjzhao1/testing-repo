{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": ".build",
    "lib": ["es6", "dom"],
    "rootDir": "./",
    "target": "es6",
    "module": "CommonJS",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
